nextflow_process {

    name "Test Process PANPHLAN_DOWNLOADPANGENOME"
    script "modules/nf-core/panphlan/downloadpangenome/main.nf"
    process "PANPHLAN_DOWNLOADPANGENOME"

    test("Test download B. fragilis pangenome") {

        when {

            process {
                """
                input[0] = "Bacteroides_fragilis"
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }

    }

    test("Test download B. fragilis pangenome '-stub' ") {

            options "-stub"

        when {

            process {
                """
                input[0] = "Bacteroides_fragilis"
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }
    
}